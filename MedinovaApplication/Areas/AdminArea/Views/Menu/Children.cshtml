@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = $"{ViewBag.ParentName} - Alt Menyular";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="mdi mdi-arrow-left"></i> Əsas Menyuya Qayıt
                </a>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="card-title mb-0">
                    <i class="mdi mdi-folder-open"></i> @ViewBag.ParentName - Alt Menyular
                </h4>
                <a asp-action="Create" asp-route-parentId="@ViewBag.ParentId" class="btn btn-primary btn-sm">
                    <i class="mdi mdi-plus"></i> Yeni Alt Menyu
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="mdi mdi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="mdi mdi-alert-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>URL</th>
                            <th>Parent</th>
                            <th>Sıra</th>
                            <th>Status</th>
                            <th>Tarix</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int rowNumber = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.Url))
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                        else
                                        {
                                            <code>@item.Url</code>
                                        }
                                    </td>
                                    <td>
                                        <label class="badge badge-info">@ViewBag.ParentName</label>
                                    </td>
                                    <td>
                                        <label class="badge badge-secondary">@item.OrderIndex</label>
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <label class="badge badge-success">Aktiv</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-danger">Deaktiv</label>
                                        }
                                    </td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm btn-icon-text">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-danger btn-sm btn-icon-text">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="mdi mdi-folder-alert"></i> Alt menyu yoxdur
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>