@using MedinovaApplication.Areas.AdminArea.Models.VMs
@model IEnumerable<MenuItemVM>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="col-lg-12 col-xl-16 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="card-title mb-0">Menyu İdarəetməsi</h4>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="mdi mdi-plus"></i> Yeni Menyu
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="mdi mdi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="mdi mdi-alert-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>URL</th>
                            <th>Sıra</th>
                            <th>Status</th>
                            <th>Tarix</th>
                            <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RowNumber</td>
                                <td>
                                    <strong>
                                        @item.Name
                                        @if (item.Haschildren)
                                        {
                                            <a asp-action="Children" asp-controller="Menu" asp-route-id="@item.Id"
                                               class="btn btn-link btn-sm p-0 ms-2"
                                               title="Alt menyulara bax">
                                                <i class="mdi mdi-folder-open text-primary" style="font-size: 20px;"></i>
                                            </a>
                                        }
                                    </strong>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Url))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        <code>@item.Url</code>
                                    }
                                </td>
                                <td>
                                    <label class="badge badge-secondary">@item.OrderIndex</label>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <label class="badge badge-success">Aktiv</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-danger">Deaktiv</label>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm btn-icon-text">
                                        <i class="mdi mdi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm btn-icon-text">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>